name: Deploy Laravel

on:
  push:
    tags:
      - 'laravel-v*'

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ghcr.io/jeremieflahaut/pea/laravel
  VERSION_TAG: ${{ github.ref_name }}
  SHA_TAG: sha-${{ github.sha }}

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Login to GHCR
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build and push Laravel image
        run: |
          docker build \
            --file backend/Dockerfile \
            --tag $IMAGE_NAME:latest \
            --tag $IMAGE_NAME:${VERSION_TAG} \
            --tag $IMAGE_NAME:${SHA_TAG} \
            .
          docker push $IMAGE_NAME --all-tags

      - name: Deploy to VPS
        uses: appleboy/ssh-action@v1.0.0
        with:
          host: ${{ secrets.VPS_HOST }}
          username: ${{ secrets.VPS_USER }}
          key: ${{ secrets.VPS_SSH_KEY }}
          script: |
            cd /home/debian/projects/pea
            git pull origin main
            ls -alsh
            docker compose -f docker-compose.prod.yml pull laravel
            docker compose -f docker-compose.prod.yml up -d laravel
            docker compose -f docker-compose.prod.yml exec laravel php artisan migrate --force
